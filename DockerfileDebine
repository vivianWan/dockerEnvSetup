FROM debian

# Install miniconda
RUN apt-get update --fix-missing && \
    apt-get install -y \
    wget bzip2 ca-certificates 

RUN echo 'export PATH=/opt/conda/bin:$PATH' > /etc/profile.d/conda.sh && \ 
wget --quiet \ 
   https://repo.continuum.io/miniconda/Miniconda3-4.5.4-Linux-x86_64.sh -O ~/miniconda.sh && \ 
   /bin/bash ~/miniconda.sh -b -p /opt/conda && \ 
   rm ~/miniconda.sh

# Install python packages
RUN /opt/conda/bin/conda install pandas scikit-learn nltk gensim spacy scipy boto flask && \
    /opt/conda/bin/conda clen --yes --all

# Setup the working folder
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# port assumed by the default Helm chart
EXPOSE 5000

# Copy the project files into the docker image (add files to the .dockerignore file in order to exlcude them from this copy)
COPY . .

CMD python ./app.py
