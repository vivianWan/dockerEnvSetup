FROM alpine

# Build dependencies
RUN apk --update add --no-cache --virtual=build-dependencies wget ca-certificates bash 

ENV LANG=C.UTF-8

# Install Miniconda & clean up Alpine install
RUN wget --quiet \ 
   https://repo.continuum.io/miniconda/Miniconda3-4.5.4-Linux-x86_64.sh  && \  
   #/bin/bash ~/miniconda.sh -b -p /opt/conda && \
   /bin/bash Miniconda3-4.5.4-Linux-x86_64.sh -b -p /opt/conda && \
   rm Miniconda3-4.5.4-Linux-x86_64.sh && \
   apk del build-dependencies && \
   echo 'export PATH=/opt/conda/bin:$PATH' >> /etc/profile.d/conda.sh

# Install python packages
RUN /opt/conda/bin/conda install --quiet --yes numpy pandas nltk gensim spacy scipy boto flask && \
    /opt/conda/bin/conda clean --yes --all

# Setup the working folder
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# port assumed by the default Helm chart
EXPOSE 5000

# Copy the project files into the docker image (add files to the .dockerignore file in order to exlcude them from this copy)
COPY . .

CMD python ./app.py
